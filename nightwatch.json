{
  "src_folders": [
    "src/content/getusermedia/gum/js",
    "src/content/getusermedia/resolution/js",
    "src/content/devices/input-output/js",
    "src/content/datachannel/filetransfer/js",
    "src/content/datachannel/datatransfer/js",
    "src/content/datachannel/basic/js",
    "src/content/peerconnection/audio/js",
    "src/content/peerconnection/dtmf/js"
  ],
  "output_folder": false,
  "custom_commands_path": "nightwatch/customCommands",
  "custom_assertions_path": "nightwatch/customAsserts",
  "page_objects_path": "",
  "globals_path": "",
  "selenium": {
    "start_process": true,
    "server_path": "node_modules/selenium/lib/runner/selenium-server-standalone-2.20.0.jar",
    "log_path": false,
    "port": 4444
  },
  "test_settings": {
    "default": {
      "filter": "test.js",
      "screenshots": {
        "enabled": false
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "--no-sandbox",
            "--allow-file-access-from-files",
            "--use-fake-device-for-media-stream",
            "--use-fake-ui-for-media-stream",
            "--disable-translate",
            "--no-process-singleton-dialog",
            "--mute-audio"
          ]
        },
        "marionette": true
      }
    },
    "firefox": {
      "desiredCapabilities" : {
        "browserName" : "firefox",
        "javascriptEnabled" : true,
        "acceptSslCerts" : true
      }
    }
  }
}